<%= form_for(@post) do |f| %>
    <%= f.select :user_id, options_for_select([[current_user.username, current_user.id]]) %><br><br>
    <%= f.label :title %>:<br>
    <%= f.text_field:title %><br/><br/>
    <%= f.label :description %>:<br>
    <%= f.text_area:description %><br/><br/>
    <%= f.file_field :picture %><br><br>
    <%= f.submit 'Create post',class:'btn btn-success' %>
<% end %>